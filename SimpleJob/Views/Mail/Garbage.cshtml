@using SimpleJob.Entities.Model
@model List<Mail>
@{
    ViewBag.Title = "Garbage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="tr">
<head>

    <style>
        body {
            margin-top: -15px;
            background: white;
            height: 100%;
        }

        #foto {
            height: 35px;
            width: 40px;
        }

        #home {
            height: 100px;
        }

        .navbar navbar-expand-xl {
            height: 200px;
        }

        .container h-100 {
            height: 200px;
        }

        .container-xxl {
            padding: 2px;
            width: initial;
            margin: 20px auto;
            background: white;
            overflow: hidden;
            height: auto
        }

        .nav_bar {
            float: left;
            width: 20%;
            height: 400px;
            background: #266d53;
        }

        .in_box {
            float: left;
            width: 40%;
            height: 400px;
            padding: 20px 25px;
        }


        .mail_box {
            float: left;
            width: 325px;
            height: 360px;
            padding: 20px 25px;
        }

        button {
            margin: 20px 25px;
            display: block;
            width: 100px;
            border: none;
            border-radius: 5px;
            height: 25px;
            line-height: 20px;
            color: #ecf0f1;
            background: #C86242;
            font-size: .75em;
            transition: all ease-in-out .1s;
        }

            button:hover {
                background: #c0392b;
            }

        ul {
            margin-top: 20px;
        }

        li {
            padding-left: 25px;
            height: 30px;
            line-height: 30px;
            color: #A6A9A9;
            font-size: .75em;
            transition: all ease-in-out .1s;
        }

            li:hover {
                background: #ecf0f1;
                color: #1E2426;
            }

            li.open {
                background: #ecf0f1;
                color: #1E2426;
            }

        header {
            height: 25px;
            line-height: 25px;
        }

        h1 {
            font-size: 18px;
            color: #1E2426;
            display: inline-block;
        }

        div[type=search] {
            height: 20px;
            border-radius: 5px;
            margin-top: -35px;
            display: inline-block;
            float: right;
        }

        input:focus {
            outline: none;
        }

        ul.sort {
            height: 24px;
            border-bottom: 1px solid #A6A9A9;
        }


            ul.sort li {
                float: right;
                text-align: right;
                font-size: 10px;
                height: 24px;
                line-height: 24px;
                margin-left: 10px;
                padding: 0;
                display: inline-block;
            }

                ul.sort li:hover {
                    background: none;
                    border-bottom: 1px solid black;
                }

        .mail_slot {
            margin: 25px 0;
        }

        .message {
            height: 25px;
            line-height: 25px;
            color: #A6A9A9;
        }

        .sender, .title, .date {
            float: left;
            font-size: 10px;
            height: 25px;
            line-height: 25px;
        }

        .sender {
            width: 100px;
        }

        .title {
            width: 150px;
        }

        .date {
            width: 70px;
            text-align: right;
        }

        .work {
            height: 20px;
            background: #3498db;
            padding: 2.5px 5px;
            border-radius: 2px;
            margin-right: 5px;
            color: white;
        }

        .family {
            height: 20px;
            background: #2ecc71;
            padding: 2.5px 5px;
            border-radius: 2px;
            margin-right: 5px;
            color: white;
        }

        .junk {
            height: 20px;
            background: #f1c40f;
            padding: 2.5px 5px;
            border-radius: 2px;
            margin-right: 5px;
            color: white;
        }


        .mail_box h1 {
            font-size: 2em;
            color: #1E2426;
            margin-bottom: 10px;
        }

        h2 {
            font-size: 10px;
            margin-bottom: 25px;
        }

        p {
            font-size: 12px;
            line-height: 18px;
            color: #A6A9A9;
        }

        textarea {
            margin-top: 25px;
            width: 320px;
            height: 38px;
            border: 2px solid #A6A9A9;
            border-radius: 5px;
        }

            textarea:focus {
                outline: none;
            }

        button.reply {
            margin: 10px 0;
            float: right;
            display: block;
            width: 75px;
            border: none;
            border-radius: 5px;
            height: 25px;
            line-height: 20px;
            color: #ecf0f1;
            background: #C86242;
            font-size: .75em;
            transition: all ease-in-out .1s;
        }

            button.reply:hover {
                background: #c0392b;
            }
    </style>

</head>
<body>
    <div class='container-xxl'>

        <div class='nav_bar' style="height:500px;">
            <a class="btn btn-danger" href="/Mail/Send">Yeni Mail</a>
            <ul>
                <li><a style="color:black" href="/Mail/Gelen/"> Gelen Kutusu</a></li>
                <li><a style="color:black" href="/Mail/Giden/">Giden Kutusu</a></li>
                <li class='open'><a style="color:black" href="/Mail/Garbage/">Çöp Kutusu</a></li>
            </ul>
        </div>

        <div class='in_box'>
          
            <header>
                <h1>Çöp Kutusu</h1>
            </header>

            <div> </div>

            <div class='mail_slot'>





                @{


                    foreach (var mail in Model)
                    {




                        <div class="message">
                            <a href="/Mail/Detay/@mail.MailId" style="color:darkgrey">
                                <div class="sender">@mail.Uye.UyeAdi @mail.Uye.UyeSoyadi</div>
                                <div class="title">@mail.MailBaslik</div>&nbsp;
                            </a>

                        </div>



                    }


                }






            </div>
        </div>


    </div>
</body>


</html>



