@model SimpleJob.Entities.Model.Uye
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Giris Sayfası - Simple Job</title>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Roboto:400,700" />
    <!-- https://fonts.google.com/specimen/Open+Sans -->
    <link rel="stylesheet" href="~/BootStraps/product-admin-master/css/fontawesome.min.css" />
    <!-- https://fontawesome.com/ -->
    <link rel="stylesheet" href="~/BootStraps/product-admin-master/css/bootstrap.min.css" />
    <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href="~/BootStraps/product-admin-master/css/templatemo-style.css">
    <!--
   
    https://templatemo.com/tm-524-product-admin
    -->
    <style>
        .saga-kaydir {
            float: left;
            padding: 0 0 1px 1px;
        }

        body {
            background-image: url("/images/loginbgi.svg");
            background-size: 2100px 950px;
            background-repeat: no-repeat;
            width: 100%;
            height: 100%;
        }

        .tm-bg-primary-dark tm-block tm-block-h-auto {
            background-color: #fd7e14;
        }
    </style>
</head>

<body>
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-12 mx-auto tm-login-col">
                <div class="bg-warning tm-block tm-block-h-auto">
                    <!-- Logo-->
                    <div class="row">
                       
                        <div class="col-12 text-center">
                            <a>
                                <img src="~/images/image4.svg" class="saga-kaydir" width="90" height="90" /> <h1 style="color: #522a10; font-family: Zilla Slab ">simplejob</h1>
                            </a>
                        </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <form action="Giris" method="post" class="tm-login-form ">
                                    <div class=" form-group">
                                        <label for="UyeEmail">Kullanıcı Adı:</label>
                                        <input name="UyeEmail"
                                               class="bg-secondary form-control validate"
                                               id="UyeEmail"
                                               value=""
                                               required />
                                    </div>
                                    <div class="form-group mt-3">
                                        <label for="UyeSifre">Şifre:</label>
                                        <input name="UyeSifre"
                                               type="password"
                                               class="bg-secondary form-control validate"
                                               id="UyeSifre"
                                               value=""
                                               required />
                                    </div>
                                    <div class="form-group mt-4">
                                        <button type="submit"
                                                class="bg-secondary btn btn-primary btn-block text-uppercase">
                                            Giriş
                                        </button>
                                    </div>
                                    <div class="form-group mt-4">

                                        <input type="checkbox"
                                               name="forgetpassword"
                                               class="bg-secondary" />
                                        Şifremi unuttum

                                    </div>
                                </form>
                            </div>
                        </div>
                        </div>
                        </div>
                        </div>
                        </div>

                        <script src="~/BootStraps/product-admin-master/js/jquery-3.3.1.min.js"></script>
                        <!-- https://jquery.com/download/ -->
                        <script src="~/BootStraps/product-admin-master/js/bootstrap.min.js"></script>
                        <!-- https://getbootstrap.com/ -->
                    </body>
</html>
